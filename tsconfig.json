{
    "compilerOptions": {
      "experimentalDecorators": true,
      "types": ["node", "jest"],
      "target": "ES2021",
      "module": "esnext",
      "lib": ["es6", "dom", "dom.iterable", "esnext"],
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "plugins": [
        {
          "transform": "ts-auto-mock/transformer",
          "cacheBetweenTests": false
        }
      ]
    },
    "include": ["src/**/*.ts", "src/*.ts", "index.d.ts"],
    "exclude": ["*.js", "jest-config.ts"]
  }